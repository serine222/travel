<section class="Trips-form" >
    

    <div class="heading m">
      <span> transport!</span>
      <h1>Create new transport</h1>
   </div>



    
    <form method="POST" action="/admin/transport" enctype="multipart/form-data">

    
      <div class="inputBox">
      <label for="date_tra"> <span>The start date</span></label>
        <input name="date_tra" id="date_tra" type="date" />
    </div>
    <div class="inputBox">
      <label for="date_rest_tra"> <span>The date of return  </span></label>
      <input name="date_rest_tra" id="date_rest_tra" type="date" />
    </div>
    <div class="inputBox">
      <label for="prix_tra"> <span>transport prix </span></label>
    <input name="prix_tra" id="prix_tra" type="number" />
    </div>
    <div class="inputBox">
      <label for="cmp_tra"> <span>company transport</span></label>
    <input name="cmp_tra" id="cmp_tra" type="text" />
    </div>
   

    <div class="inputBox">
      <label for="phototransport"> <span>photo </span></label>
      <input name="phototransport" id="phototransport" type="file" />
    </div>
    <div class="inputBox">
            
      <label for="typ_tra"> <span> type transport</span></label>

      <select class="custom-select mr-sm-2" name="typ_tra">
          <option selected disabled> type</option>
          <% arrtyp_tra.forEach(item=> { %>
            
      <option value='<%= item._id %>'>  <%= item.name %> </option>
      
      <% }); %>  
      </select>
      
      </div>

    
      <button class="btn">create</button>

    </form>









